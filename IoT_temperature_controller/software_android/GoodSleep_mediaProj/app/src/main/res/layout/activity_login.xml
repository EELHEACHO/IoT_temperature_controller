<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sleep.good.goodsleep_mediaproj.LoginActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_table"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="꿀잠 프로젝트"
                android:id="@+id/App_title"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"

                android:textColor="#f3acab"
                android:textSize="42sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="180dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6.5"
                android:gravity="center">

                <!--<com.nhn.android.naverlogin.ui.view.OAuthLoginButton
                    android:id="@+id/buttonOAuthLoginImg"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />-->
                <!--<Button
                    android:text="네이버로 로그인"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:background="@drawable/round_pink"
                    android:textColor="#FFFFFF"

                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />-->
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical|fill_vertical|center"
            android:elevation="0dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6.5"
                android:gravity="fill_vertical|center">

                <com.kakao.usermgmt.LoginButton
                    android:id="@+id/com_kakao_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <!--<Button
                    android:text="카카오톡으로 로그인"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:background="@drawable/round_pink"
                    android:textColor="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="45dp"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />-->
            </LinearLayout>

        </TableRow>

    </TableLayout>


</RelativeLayout>
